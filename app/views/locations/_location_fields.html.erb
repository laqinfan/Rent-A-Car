<div class="nested-fields">
  <p>
    <%= f.label :status, "Status" %>
    <%= f.text_field :status %>
  </p>

  <% if not f.object.address.present? %>
    <% f.object.build_address %>
  <% end%>
  
  <%= f.fields_for :address do |address_form| %>
    <%= render 'addresses/address_fields', f: address_form %>
  <% end %>
  
  <%= link_to_remove_association "Remove Pickup Location", f %>
</div>