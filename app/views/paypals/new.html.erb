<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">

    <h2 class="text-center">Add Paypal Information</h2>

    <%= form_for @paypal do |f| %>
        <% if @paypal.errors.any? %>
            <div id="error_explanation">
            <h2><%= pluralize(@paypal.errors.count, "error") %> prohibited this paypal from being saved:</h2>

            <ul>
            <% @paypal.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
            </div>
        <% end %>
        
        <div class="form-group">
          <%= f.label :paypal_id %><br />
          <%= f.text_field :paypal_id, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :paypal_username %><br />
          <%= f.text_field :paypal_username, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :paypal_account_routing_number %><br />
          <%= f.text_field :paypal_account_routing_number, class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Add Paypal", { class: "btn btn-primary btn-block" } %>
        </div>       
        
    <% end %>

    <div class="links text-center">
        <%= link_to 'Back', my_profile_path %>
    </div>

</div>
</div>
</div>
