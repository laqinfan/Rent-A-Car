<%= form_with(model: car, local: true) do |form| %>
  <% if car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :make %>
    <%= form.text_field :make, id: :car_make %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.text_field :model, id: :car_model %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year, id: :car_year %>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.text_field :color, id: :car_color %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :car_description %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <!--<%= form.text_field :category, id: :car_category %>-->
    <%= form.select :category, options_for_select(Car::VEHICLE_CATEGORIES, car.category) %>
  </div>

  <div class="field">
    <%= form.label :mileage %>
    <%= form.text_field :mileage, id: :car_mileage %>
  </div>

  <div class="field">
    <%= form.label :number_of_seats %>
    <%= form.number_field :number_of_seats, id: :car_number_of_seats %>
  </div>

  <div class="field">
    <%= form.label :price_per_day %>
    <%= form.text_field :price_per_day, id: :car_price_per_day %>
  </div>

  <%= form.fields_for :locations do |location_form| %>
    <p>
      <%= location_form.label :status, "Status" %>
      <%= location_form.text_field :status %>
    </p>

    <%= location_form.fields_for :address do |address_form| %>
      <p>
        <%= address_form.label :street1, "Street Line 1" %>
        <%= address_form.text_field :street1 %>
      </p>
      
      <p>
        <%= address_form.label :street2, "Street Line 2" %>
        <%= address_form.text_field :street2 %>
      </p>

      <p>
        <%= address_form.label :city, "City" %>
        <%= address_form.text_field :city %>
      </p>

      <p>
        <%= address_form.label :state, "State" %>
        <%= address_form.text_field :state %>
      </p>

      <p>
        <%= address_form.label :zipcode, "Zipcode" %>
        <%= address_form.text_field :zipcode %>
      </p>
    <% end %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
