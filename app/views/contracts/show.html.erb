    function approveDeal() {
        alert("Order is placed successfully! Thanks");
        window.location.replace("http://localhost:3000/contracts");
    }
</script>
<button type="button"> Negotiate </button>
<input type="button" id="approveDeal" onclick="approveDeal()" value="Approve"/>

<br>
