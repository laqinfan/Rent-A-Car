<p id="notice"><%= notice %></p>

<h1>Contracts</h1>

<table>
  <thead>
    <tr>
    <th>  Contract # </th>
    <th>&nbsp &nbsp Start date</th>
    <th> &nbsp &nbsp Return date</th>
    <th>&nbsp &nbsp Price/Day</th>
    <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
      <td><%= link_to contract.id, contract %></td>
      <td>&nbsp &nbsp <%= contract.start_date %></td>
      <td>&nbsp &nbsp <%= contract.return_date %></td>
      <td>&nbsp &nbsp <%= contract.price %></td>
      <td style="visibility:hidden; >&nbsp &nbsp <%= contract.subtotal %></td>
      <td style="visibility:hidden; >&nbsp &nbsp <%= contract.total %></td>
      <td><%= link_to 'Show', contract %></td>
      <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
      <td><%= link_to 'Delete', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

