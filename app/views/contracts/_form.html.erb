<%= form_with(model: contract, local: true) do |form| %>
  <% if contract.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contract.errors.count, "error") %> prohibited this contract from being saved:</h2>

      <ul>
      <% contract.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :car_id, value: @car.id %>
  <%= form.hidden_field :owner_paypal_id, value: @owner_paypal.id %>
  <%= form.hidden_field :renter_paypal_id, value: @renter_paypal.id %>
  <%= form.hidden_field :status, value: "pending" %>


  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, min: Date.today, id: :contract_start_date  %>
  </div>

  <div class="field">
    <%= form.label :return_date %>
    <%= form.date_field :return_date, min: Date.today, id: :contract_return_date  %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :contract_price, value: @car.price_per_day %>
  </div>

  <div class="field">
  
    <%= form.hidden_field :subtotal, id: :contract_subtotal %>
  </div>

  <div class="field">
   
    <%= form.hidden_field :total, id: :contract_total %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
