<p id="notice"><%= notice %></p>

<h1>Car Ratings</h1>

<table>
  <thead>
    <tr>
    <th> Car Model </th>
    <th> User Email </th>
    <th> Rating </th>
    <th> Comments </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_ratings.each do |car_rating| %>
      <tr>
      <td><%= car_rating.car.make_model %></td>
      <td><%= car_rating.user.email %></td>
      <td><%= car_rating.rating %></td>
      <td><%= car_rating.comments %></td>
        <td><%= link_to 'Show', car_rating %></td>
        <td><%= link_to 'Edit', edit_car_rating_path(car_rating) %></td>
        <td><%= link_to 'Destroy', car_rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

