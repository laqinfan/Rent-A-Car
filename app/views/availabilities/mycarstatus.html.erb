<style>
.center {
    margin: auto;
    width: 60%;
    padding: 10px;
}
</style>
<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h2 class="text-center">Avalibilities for My Vehicles</h2>
      <div class="center">
      <% if !@my_carstatus.empty? %>

      <table>
        <thead>
          <tr bgcolor="#c1cdcd">

          <th>Car model </th>
          <th>Start date</th>
          <th>Return date</th>
          <th>Status</th>

          <th colspan="3"></th>


          </tr>
        </thead>


        <tbody>
          <% @my_carstatus.each do |a| %>
            <% if a.car.owner == current_user %>
              <tr bgcolor="#e0eeee" >
              <td><%= a.car.model %></td>
              <td><%= a.start %></td>
              <td><%= a.end %></td>
              <td><%= a.status %></td>

              <td><%= link_to 'Update', edit_availability_path(a) %></td>
              <td><%= link_to 'Destroy', a, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

      <% else %>

      <p>You have no updates for your cars.</p>

      <% end %>

      <%= link_to 'Add vehicle status', new_availability_path %>
      
      <div class="links text-center">
        <%= link_to'Home', root_path %>
      </div>

      </div>
    </div>
  </div>
</div>
