<h1>New Testimonial</h1>


<%= form_for @testimonial do |f| %>
    <% if @testimonial.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@testimonial.errors.count, "error") %> prohibited this review from being saved:</h2>
        <ul>
        <% @testimonial.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
    <%= f.label :user, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :user_id, value: @current_user.email, class: 'form-control' %>
    <div>
    </div>

    <div class="form-group row">
    <%= f.label :rating, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-6" id='star-rating'></div>
    </div>

    <script>
    $('#star-rating').raty({
        path: '/assets',
        scoreName: 'testimonial[rating]'
    });
    </script>

    <div class="form-group row">
      <%= f.label :comment, class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-6">
        <%= f.text_area:comment, class: 'form-control' %>
      <div>
    </div>

    <br/>
    <div class="form-group row">
      <div class="col-sm-10">
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
        <%= link_to "Back", root_path, class: "btn btn-secondary" %>
      </div>
    </div>
<% end %>

<%= link_to 'Back', root_path %>
