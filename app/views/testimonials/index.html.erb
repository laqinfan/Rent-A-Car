<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <h2 class="text-center">Testimonials</h2>

      <% @testimonials.each do |testimonial| %>
        <div class="testimonials">
          <font color="#A569BD"><%= testimonial.user.email %></font>
          <div class="star-rating" data-score= <%= testimonial.rating %>> </div>
          <font color="purple"><%= testimonial.created_at.localtime.strftime '%m-%d-%Y' %></font>
          <%= testimonial.comment %>
        </div>
        </br>
      <% end %>

      <script>
        $('.star-rating').raty({
        path: '/assets/',
        readOnly: true,
        score: function() {
              return $(this).attr('data-score');
        }
        });
      </script>

      <div class="links text-center">
        <%= link_to 'Write a Review', new_testimonial_path %>
      </div>
      
    </div>
  </div>
</div>
