<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-md-10">

      <div class="container">
        <h2 class="text-center">Owner Ratings</h2>

        <% if !@owner_ratings.empty? %>
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Owner</th>
              <th scope="col">Contract</th>
              <th colspan="1"></th>
            </tr>
          </thead>

          <tbody>
            <% @owner_ratings.each do |owner_rating| %>

              <tr bgcolor="#f7f7f9" >
                <td><%= owner_rating.owner.email %></td>
                <td><%= owner_rating.contract.short_form %></td>
                
                <td><%= link_to 'Edit', edit_owner_rating_path(owner_rating) %></td>
                
              </tr>

            <% end %>
          </tbody>
        </table>

        <% end %>
      </div>

      <div class="container">
        <h2 class="text-center">Owner Ratings</h2>

        <% if !@owner_ratings.empty? %>
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Contract</th>
              <th colspan="1"></th>
              </tr>
          </thead>


          <tbody>
            <% @car_ratings.each do |car_rating| %>
              <tr bgcolor="#f7f7f9" >
                <td><%= car_rating.contract.short_form %></td>
                
                <td><%= link_to 'Edit', edit_car_rating_path(car_rating) %></td>
                
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
      </div>

    </div>
  </div>
</div>
